<% include partials/header %>
<div class="container">
    <div class="row">
        <h2 style="text-align:center">Submit new business</h2>
        <div style="width:30%; margin:25px auto">
            <form action="/business" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>  
                <div class="form-group">
                    <input class="form-control" type="text" name="phoneNumber" placeholder="Phone Number">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="website" placeholder="Website">
                </div>  
                <div class="form-group">
                    <input class="form-control" type="text" name="address" placeholder="Address">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="owner" placeholder="Owner">
                </div>  
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Tell us about your business">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="category" placeholder="Category">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="subCategory" placeholder="More specifically">
                </div> 
                <div class="form-group">
                    <input class="form-control" type="text" name="searchTags" placeholder="Give us some words to find you with">
                </div>  
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>    
            </form>
            <a href="/business" style="color:white">Go Back</a>
        </div>    
    </div>        
</div>
<% include partials/footer %>